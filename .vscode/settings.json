{
  "prettier.enable": false,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "astro", 
    "typescript",
    "typescriptreact"
  ],
  "windicss.includeLanguages": {
    "astro": {
      "type": "html",
      "patterns": ["class\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
    }
  }
}